<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="8dp"
    android:backgroundTint="#01EC76"
    app:cardCornerRadius="8dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/room_id_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:text="Room ID:"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_room_id"
            app:layout_constraintEnd_toStartOf="@+id/tv_room_id"
            app:layout_constraintTop_toTopOf="@+id/tv_room_id" />

        <TextView
            android:id="@+id/slot_number_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Slot:"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_slot_number"
            app:layout_constraintEnd_toStartOf="@+id/tv_slot_number"
            app:layout_constraintTop_toTopOf="@+id/tv_slot_number" />

        <TextView
            android:id="@+id/winner_room_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Winner:"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_winner_number"
            app:layout_constraintEnd_toStartOf="@+id/tv_winner_number"
            app:layout_constraintTop_toTopOf="@+id/tv_winner_number" />

        <TextView
            android:id="@+id/tv_room_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="65dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="-MMHYjaUy75Jh78"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_slot_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tv_winner_number"
            app:layout_constraintStart_toStartOf="@+id/tv_winner_number"
            app:layout_constraintTop_toBottomOf="@+id/tv_winner_number" />

        <TextView
            android:id="@+id/tv_winner_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/tv_slot_number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.88"
            app:layout_constraintStart_toEndOf="@+id/tv_room_id"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/copy_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="@+id/tv_room_id"
            app:layout_constraintStart_toEndOf="@+id/tv_room_id"
            app:layout_constraintTop_toTopOf="@+id/tv_room_id"
            app:srcCompat="@drawable/ic_copy" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>